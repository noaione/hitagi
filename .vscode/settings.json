{
    "[vue]": {
        "editor.formatOnSave": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "node_modules/**": true,
        ".svelte-kit/**": true
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "editor.tabSize": 2,
    "editor.rulers": [110],
    "files.associations": {
        "*.css": "tailwindcss"
    },
}